<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mireagaloideal.apportame">

    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/regalo_log"
        android:label="TuRegaloIdeal"
        android:roundIcon="@drawable/regalo_log"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login.controllers.LoginActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".main.controllers.MainActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>