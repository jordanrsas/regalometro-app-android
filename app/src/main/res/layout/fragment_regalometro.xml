        <com.mireagaloideal.apportame.utils.CustomFontTextView
            android:id="@+id/regaloTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Ya falta poco para alcanzar la meta"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            app:font_type="Bupkis" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_redenciones"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/regaloName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu Regalo"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/regaloImage"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:src="@drawable/regalo" />

        </LinearLayout>


    </LinearLayout>

